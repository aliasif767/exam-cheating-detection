# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-vision-exam

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here

# Frontend URL for CORS
FRONTEND_URL=http://localhost:8080

# Email Configuration (Configure based on your email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ai-vision-exam.com

# Face Recognition API (if using external service)
FACE_RECOGNITION_API_KEY=your-face-api-key
FACE_RECOGNITION_ENDPOINT=https://api.facerecognition.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring Configuration
VIOLATION_THRESHOLD=5
AUTO_TERMINATE_ENABLED=true
FACE_VERIFICATION_THRESHOLD=0.6

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis Configuration (if using Redis for sessions/caching)
REDIS_URL=redis://localhost:6379

# SMS Configuration (if using SMS notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=AIEXAM

# Cloud Storage Configuration (if using cloud storage for images)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-vision-exam-uploads

# Analytics Configuration
ANALYTICS_API_KEY=your-analytics-key
ANALYTICS_ENDPOINT=https://api.analytics.com
